<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kontrol"
    android:background="#689782"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/ileri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ileri2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">


        <Button
            android:id="@+id/sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sol"
            />


        <Button
            android:id="@+id/sag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sag"

             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/geri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/geri"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >

        <Button
            android:id="@+id/dur"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_cancel_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"

        >

        <Button
            android:id="@+id/sesliKomut"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:background="@drawable/ic_keyboard_voice_black_24dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deneme"
            />

    </LinearLayout>



</LinearLayout>